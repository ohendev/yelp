<%= simple_form_for(@restaurant, class: 'form-resto') do |f| %>
  <div class="form-group">
    <%= f.label :name, class: 'form-label' %>
    <%= f.text_field :name, class: 'form-control-lg w-100' %>
  </div>
  <div class="form-group">
    <%= f.label :category, class: 'form-label' %>
    <%= f.text_field :category, class: 'form-control-lg w-100' %>
  </div>
  <div class="form-group">
    <%= f.label :address, class: 'form-label' %>
    <%= f.text_field :address, class: 'form-control-lg w-100' %>
  </div>
  <div class="form-group">
    <%= f.label :phone_number, class: 'form-label' %>
    <%= f.text_field :phone_number, class: 'form-control-lg w-100' %>
  </div>
  <div class="form-group">
  <%= f.label :img_url, class: 'form-label' %>
    <%= f.text_field :img_url, class: 'form-control-lg w-100' %>
  </div>
  <%= f.submit class: 'btn btn-warning w-100 text-center my-3 radius' %>
<% end %>