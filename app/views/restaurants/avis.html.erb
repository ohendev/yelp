<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://cdn.metro-online.com/nextcms/-/media/Project/MCW/FR_Metro/Images/services-inspirations/metro/univers-produits/equipement-salle/header/equipement-salle.jpg?rev=c8ee379c961e45f39b9781c2f3c0c154&w=1416&hash=9CFE532D5CB2D9CD0BCA0FFAC5444126);">
  <div class="container">
    <h1>Restaurants</h1>
    <p>Browse our restaurants to discover their details and reviews.</p>
    <%= link_to "Add new restaurant", new_restaurant_path, class: 'btn btn-warning radius' %>
    <%= link_to "More reviews first", avis_restaurants_path, class: 'btn btn-success radius' %>
    <%= link_to "Best rating first", rating_restaurants_path, class: 'btn btn-success radius' %>
    <div class="w-50">
      <%= render 'search'%>
    </div>
  </div>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 rounded bg-gold my-3 shadow py-2">
      <ul class="list cards">
        <% @restaurants.each do |restaurant| %>
          <div class="card-trip">
            <a href="<%= restaurant_path(restaurant.id)%>"><img src="<%=restaurant.img_url%>" /></a>
            <div class="card-trip-infos">
              <div>
                <h2><%= link_to restaurant.name, restaurant_path(restaurant.id) %></h2>
                <p><%= restaurant.address %> - <%= restaurant.phone_number %></p>
              </div>
              <div class="card-trip-right">
              <h2 class="card-trip-pricing"><%= restaurant.category %></h2>
              <p><a href="<%=restaurant_path(restaurant.id)%>"><%= restaurant.reviews.size %> avis</a></p>
              </div>
              
            </div>
          </div>
        <% end %>
      </ul>
    </div>
  </div>
</div>
<%= render 'footer' %>