<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%=@restaurant.img_url%>);">
  <div class="container">
    <h1><%= @restaurant.name %></h1>
    <p><strong>Category:</strong> <%= @restaurant.category %></p>
    <p><strong>Address:</strong> <%= @restaurant.address %></p>
    <p><strong>Phone number:</strong> <%= @restaurant.phone_number %></p>
    <%= link_to 'Back', restaurant_path(@restaurant.id), class:"btn btn-warning radius"%>
    
  </div>
</div>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 bg-white my-3 rounded border shadow py-3">
      <h2>Edit details</h2>
      <%= render "form", restaurant: @restaurant %>
    </div>
  </div>
</div>